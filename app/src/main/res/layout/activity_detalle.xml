<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="nombre"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Tienda1deta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tienda 1"
                android:textColor="@color/black"
                android:textSize="22sp" />


            <EditText
                android:id="@+id/fecha_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="FECHA PUBLICACION"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TIENDA2deta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sucursal_3"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/TIENDA3deta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sucursal_2"
                android:textColor="@color/black"
                android:textSize="19sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>